{
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es2015", // Class extend requires using "es2015" instead of "es5"
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"include": [
		"src/**/*",
		"global.d.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}